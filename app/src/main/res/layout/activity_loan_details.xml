<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="loanDetailsVM"
            type="com.kirtikumarsapplication.app.modules.loan_details.data.viewmodel.LoanDetailsVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/frameStack"
            style="@style/groupStylewhite_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_62pxv"
            android:elevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageImage726"
                android:layout_width="@dimen/_120pxh"
                android:layout_height="@dimen/_22pxh"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_40pxh"
                android:layout_marginTop="@dimen/_20pxv"
                android:layout_marginEnd="@dimen/_40pxh"
                android:layout_marginBottom="@dimen/_19pxv"
                android:scaleType="fitXY"
                android:src="@drawable/img_image726"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_image726" />
        </FrameLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/save_as_draft_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameStack">

            <LinearLayout
                android:id="@+id/linearAndroidLarge"
                style="@style/groupStylewhite_A700"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearColumnOne"
                    style="@style/groupStylecornerRadius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_marginTop="@dimen/_20pxv"
                    android:layout_marginEnd="@dimen/_16pxh"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearColumnloandetails"
                        style="@style/groupStylecornerRadius"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtLoanDetails"
                            style="@style/txtIntersemibold14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="@dimen/_119pxh"
                            android:layout_marginEnd="@dimen/_119pxh"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@{loanDetailsVM.loanDetailsModel.txtLoanDetails}"
                            tools:text="@string/lbl_loan_details" />

                        <FrameLayout
                            android:id="@+id/frameStackgroup18606"
                            android:layout_width="@dimen/_320pxh"
                            android:layout_height="@dimen/_8pxv"
                            android:layout_gravity="start"
                            android:layout_marginTop="@dimen/_14pxv">

                            <LinearLayout
                                android:id="@+id/linearColumn"
                                style="@style/groupStylecornerRadius_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/linearColumngroup18606"
                                    style="@style/groupStylecornerRadius_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <ProgressBar
                                        android:id="@+id/progressBarGroup18606"
                                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="start"
                                        android:indeterminate="false"
                                        android:max="100"
                                        android:minHeight="@dimen/_8pxv"
                                        android:progress="91"
                                        android:progressDrawable="@drawable/layer_list_radius_4" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearColumnrectangle30405"
                                style="@style/groupStyledeep_purple_900_75cornerRadius"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginEnd="@dimen/_10pxh"
                                android:orientation="vertical">

                                <View
                                    android:id="@+id/viewRectangle30405"
                                    android:layout_width="@dimen/_6pxh"
                                    android:layout_height="@dimen/_6pxh"
                                    android:layout_gravity="start"
                                    android:background="@drawable/rectangle_bg_deep_purple_900_75_radius_4" />
                            </LinearLayout>

                            <View
                                android:id="@+id/viewRectangle5396"
                                android:layout_width="@dimen/_6pxh"
                                android:layout_height="@dimen/_6pxh"
                                android:layout_gravity="end"
                                android:layout_marginStart="@dimen/_125pxh"
                                android:layout_marginEnd="@dimen/_125pxh"
                                android:background="@drawable/rectangle_bg_white_a700_radius_4" />

                            <View
                                android:id="@+id/viewRectangle30403"
                                android:layout_width="@dimen/_6pxh"
                                android:layout_height="@dimen/_6pxh"
                                android:layout_gravity="end"
                                android:layout_marginStart="@dimen/_62pxh"
                                android:layout_marginEnd="@dimen/_62pxh"
                                android:background="@drawable/rectangle_bg_white_a700_radius_4" />

                            <View
                                android:id="@+id/viewRectangle30404"
                                android:layout_width="@dimen/_6pxh"
                                android:layout_height="@dimen/_6pxh"
                                android:layout_gravity="end"
                                android:layout_marginStart="@dimen/_10pxh"
                                android:layout_marginEnd="@dimen/_1pxh"
                                android:background="@drawable/rectangle_bg_deep_purple_900_75_radius_4" />

                            <View
                                android:id="@+id/viewRectangle5398"
                                android:layout_width="@dimen/_6pxh"
                                android:layout_height="@dimen/_6pxh"
                                android:layout_gravity="start"
                                android:layout_marginStart="@dimen/_124pxh"
                                android:layout_marginEnd="@dimen/_124pxh"
                                android:background="@drawable/rectangle_bg_white_a700_radius_4" />

                            <View
                                android:id="@+id/viewRectangle30406"
                                android:layout_width="@dimen/_6pxh"
                                android:layout_height="@dimen/_6pxh"
                                android:layout_gravity="start"
                                android:layout_marginStart="@dimen/_62pxh"
                                android:layout_marginEnd="@dimen/_62pxh"
                                android:background="@drawable/rectangle_bg_white_a700_radius_4" />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/lineLine885"
                    android:layout_width="@dimen/_328pxh"
                    android:layout_height="@dimen/_1pxv"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_marginTop="@dimen/_20pxv"
                    android:layout_marginEnd="@dimen/_16pxh"
                    android:background="@color/black_900_19" />

                <LinearLayout
                    android:id="@+id/linearColumnrectangle29402"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_28pxv"
                    android:gravity="start"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearRowrectangle29402"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20pxh"
                        android:layout_marginEnd="@dimen/_20pxh"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:id="@+id/frameStackOne"
                            android:layout_width="@dimen/_71pxh"
                            android:layout_height="@dimen/_71pxv"
                            android:layout_marginBottom="@dimen/_2pxv">

                            <ImageView
                                android:id="@+id/imageImage727"
                                imageRes="@{@drawable/img_image727}"
                                android:layout_width="@dimen/_71pxh"
                                android:layout_height="@dimen/_71pxh"
                                android:layout_gravity="start"
                                android:scaleType="fitXY"
                                tools:ignore="ContentDescription"
                                tools:src="@drawable/img_image727" />

                            <FrameLayout
                                android:id="@+id/frameStackrectangle29402"
                                style="@style/groupStyleindigo_A200cornerRadius"
                                android:layout_width="@dimen/_71pxh"
                                android:layout_height="@dimen/_71pxv"
                                android:layout_gravity="start">

                                <ImageView
                                    android:id="@+id/imageImage728"
                                    imageRes="@{@drawable/img_image728}"
                                    android:layout_width="@dimen/_71pxh"
                                    android:layout_height="@dimen/_71pxh"
                                    android:layout_gravity="start"
                                    android:scaleType="fitXY"
                                    tools:ignore="ContentDescription"
                                    tools:src="@drawable/img_image728" />

                            </FrameLayout>
                        </FrameLayout>

                        <LinearLayout
                            android:id="@+id/linearColumntellusabouty"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_9pxh"
                            android:layout_marginTop="@dimen/_1pxv"
                            android:layout_weight="0.74"
                            android:gravity="start"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtTellusabouty"
                                style="@style/txtIntersemibold16"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="@{loanDetailsVM.loanDetailsModel.txtTellusabouty}"
                                tools:text="@string/msg_tell_us_about_y" />

                            <TextView
                                android:id="@+id/txtShareyourloan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_8pxv"
                                android:layout_marginEnd="@dimen/_10pxh"
                                android:ellipsize="end"
                                android:lineSpacingExtra="@dimen/_3pxh"
                                android:singleLine="true"
                                android:text="@{loanDetailsVM.loanDetailsModel.txtShareyourloan}"
                                tools:text="@string/msg_share_your_loan" />

                            <LinearLayout
                                android:id="@+id/linearRowcheckmark"
                                style="@style/groupStylegreen_900_63cornerRadius"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_1pxh"
                                android:layout_marginTop="@dimen/_8pxv"
                                android:layout_marginEnd="@dimen/_10pxh"
                                android:gravity="start"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageCheckmark"
                                    android:layout_width="@dimen/_11pxh"
                                    android:layout_height="@dimen/_11pxh"
                                    android:layout_marginStart="@dimen/_7pxh"
                                    android:layout_marginTop="@dimen/_4pxv"
                                    android:layout_marginBottom="@dimen/_5pxv"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/img_checkmark"
                                    tools:ignore="ContentDescription"
                                    tools:src="@drawable/img_checkmark" />

                                <TextView
                                    android:id="@+id/txt100Datasecur"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5pxh"
                                    android:layout_marginTop="@dimen/_3pxv"
                                    android:layout_marginEnd="@dimen/_10pxh"
                                    android:layout_marginBottom="@dimen/_1pxv"
                                    android:ellipsize="end"
                                    android:lineSpacingExtra="@dimen/_3pxh"
                                    android:singleLine="true"
                                    android:text="@{loanDetailsVM.loanDetailsModel.txt100Datasecur}"
                                    tools:text="@string/msg_100_data_secur" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/etLoanType"
                        style="@style/etRoundedOutline_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20pxh"
                        android:layout_marginTop="@dimen/_36pxv"
                        android:layout_marginEnd="@dimen/_20pxh"
                        android:background="@drawable/rectangle_border_gray_401_radius_7"
                        android:ellipsize="end"
                        android:hint="@string/lbl_loan_type"
                        android:inputType="text"
                        android:lineSpacingExtra="@dimen/_3pxh"
                        android:paddingStart="@dimen/_16pxh"
                        android:paddingTop="@dimen/_16pxv"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingBottom="@dimen/_14pxv"
                        android:singleLine="true"
                        android:text="@={loanDetailsVM.loanDetailsModel.etLoanTypeValue}"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray_500"
                        tools:ignore="Autofill" />

                    <EditText
                        android:id="@+id/etLoanAmount"
                        style="@style/etRoundedOutline_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20pxh"
                        android:layout_marginTop="@dimen/_28pxv"
                        android:layout_marginEnd="@dimen/_20pxh"
                        android:background="@drawable/rectangle_border_gray_401_radius_7"
                        android:ellipsize="end"
                        android:hint="@string/lbl_loan_amount"
                        android:inputType="text"
                        android:lineSpacingExtra="@dimen/_3pxh"
                        android:paddingStart="@dimen/_16pxh"
                        android:paddingTop="@dimen/_15pxv"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingBottom="@dimen/_15pxv"
                        android:singleLine="true"
                        android:text="@={loanDetailsVM.loanDetailsModel.etLoanAmountValue}"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray_500"
                        tools:ignore="Autofill" />

                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <ImageView
            android:id="@+id/center_landing_ph"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/save_as_draft_btn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="40dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:padding="8dp"
            android:text="Save as Draft"
            android:textColor="#607CF2"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/center_landing_ph"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
            app:strokeColor="#607CF2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/continue_btn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="#607CF2"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:padding="8dp"
            android:text="Continue"
            android:textColor="#FFFFFF"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/center_landing_ph"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
            app:strokeColor="#607CF2" />

        <RelativeLayout
            android:id="@+id/progressView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#31000000"
            android:padding="20dp"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/ProgressBar01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:indeterminate="true" />

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
